<div class="div-body">
    <br>
    <div class="container">
        <div class="form-signin">
            <center>
                <h3> Registrar una nueva cuenta </h3>
            </center>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              
              <label style="color: #e60000"><%= devise_error_messages! %></label>

              <br><br>
              
              <div class="field">
                <%= f.email_field :email, autofocus: true, 
                class: "form-control", :placeholder => "Correo Electrónico" %>
              </div>
              
              <br>
              
              <div class="field">
                <%= f.password_field :password, autocomplete: "off", 
                class: "form-control", :placeholder => "Contraseña" %>
                <% if @minimum_password_length %>
                  &nbsp;(Debe tener un largo mínimo de <%= @minimum_password_length %> digitos)
                <% end %>
              </div>
              
              <br>
              
              <div class="field">
                <%= f.password_field :password_confirmation, 
                autocomplete: "off", class: "form-control", :placeholder => "Confirmar Contraseña"  %>
              </div>

              <br>

              <% for role in User::ROLES %>
                <%= check_box_tag "user[roles][#{role}]", role, @user.roles.include?(role), {:name => "user[roles][]"} %>
                <%= label_tag "user_roles_#{role}", role.to_s.humanize %><br />
              <% end %>
              <%= hidden_field_tag "user[roles][]", "" %>

              <br>

              <%= f.submit "Registrar", class: "btn btn-primary btn-block" %>

              <br>
                
              <%= render "users/shared/links" %>

            <% end %>
            <br>
        </div>
    </div>
</div>
