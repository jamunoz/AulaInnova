<div class="div-body">
    <br>
    <div class="container">
        <div class="form-signin">
            <center>
                <h3> Crear una nueva cuenta </h3>
            </center>

            <br>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              
              <%= devise_error_messages! %>

              <br>
              
              <div class="field">
                <%= f.email_field :email, autofocus: true, 
                class: "form-control", :placeholder => "Correo Electrónico" %>
              </div>
              
              <br>
              
              <div class="field">
                <%= f.password_field :password, autocomplete: "off", 
                class: "form-control", :placeholder => "Contraseña" %>
                <% if @minimum_password_length %>
                  &nbsp;(Debe tener un largo mínimo de <%= @minimum_password_length %> digitos)
                <% end %>
              </div>
              
              <br>
              
              <div class="field">
                <%= f.password_field :password_confirmation, 
                autocomplete: "off", class: "form-control", :placeholder => "Confirmar Contraseña"  %>
              </div>

              <br>

              <%= f.submit "Crear", class: "btn btn-primary btn-block" %>

            <% end %>
            <br>
        </div>
    </div>
</div>
