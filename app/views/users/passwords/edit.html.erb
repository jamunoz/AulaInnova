<div class="div-body">
    <br>
    <div class="container">
        <div class="form-signin">
            <center>
                <h3>Cambiar Contraseña</h3>
            </center>
            
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                
                <br>
                <%= devise_error_messages! %>
                <br>

                <%= f.hidden_field :reset_password_token %>

                <div class="field">
                    <%= f.password_field :password, autofocus: true, autocomplete: "off",
                    class: "form-control", :placeholder => "Nueva Contraseña"  %>
                    <% if @minimum_password_length %>
                        &nbsp;(Debe tener un largo mínimo de <%= @minimum_password_length %> digitos)
                    <% end %>
                </div>

                <br>
                
                <div class="field">
                    <%= f.password_field :password_confirmation, autocomplete: "off",
                    class: "form-control", :placeholder => "Confirmar nueva Contraseña"  %>
                </div>

                <br>

                <div class="actions">
                    <%= f.submit "Cambiar", class: "btn btn-success btn-block" %>
                </div>
                
                <br>
                
                <%= render "users/shared/links" %>

            <% end %>
            <br>
        </div>
    </div>
    <br>
</div>

<%= render "shared/footer" %>