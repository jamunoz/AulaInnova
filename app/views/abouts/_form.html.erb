<%= form_for(@about) do |f| %>
  
  <% if @about.errors.any? %>
    <div style="color: #e60000">
        <% @about.errors.full_messages.each do |message| %> 
          <li>
            <%= message %>
          </li>
        <% end %> 
    </div>
  <% end %>

  <div class="field">
    <br> <label> Misión </label> <br>
    <%= f.cktext_area :mission %>
  </div>
  <div class="field">
    <br> <label> Visión </label> <br>
    <%= f.cktext_area :vision %>
  </div>
  <div class="field">
    <br> <label> Compañía </label> <br>
    <%= f.cktext_area :company %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit "Enviar", class: "btn btn-success" %>
  </div>
  <br>

<% end %>

